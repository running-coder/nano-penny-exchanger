{
  "name": "nano-penny-exchanger",
  "productName": "Nano-Penny-Exchanger",
  "description": "Transform your pocket change into some sweet Nanos",
  "version": "0.0.1",
  "private": false,
  "main": "public/electron.js",
  "author": {
    "name": "Tom Bertrand"
  },
  "license": "MIT",
  "scripts": {
    "react-start": "react-scripts start",
    "react-build": "react-scripts build",
    "react-test": "react-scripts test --env=jsdom",
    "react-eject": "react-scripts eject",
    "start": "concurrently \"cross-env BROWSER=none yarn react-start\" \"wait-on http://localhost:3000 && electron .\"",
    "build": "yarn react-build && electron-builder -mwl",
    "release": "yarn react-build && electron-builder --publish=never",
    "rebuild": "electron-rebuild"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "build": {
    "asar": true,
    "appId": "com.nano.npe",
    "copyright": "Copyright Â© 2019 ${author}",
    "npmRebuild": false,
    "mac": {
      "identity": null,
      "category": "public.app-category.utilities"
    },
    "linux": {
      "target": [
        "AppImage"
      ]
    },
    "files": [
      "build/**",
      "server/**"
    ],
    "directories": {
      "buildResources": "public"
    }
  },
  "dependencies": {
    "@emotion/core": "^10",
    "@emotion/styled": "^10",
    "@lightspeed/flame": "^0.2.0",
    "@types/jest": "^24.0.18",
    "@types/node": "^12.7.9",
    "@types/react": "^16.9.4",
    "@types/react-dom": "^16.9.1",
    "cross-env": "^6.0.3",
    "dotenv": "^8.1.0",
    "electron-is-dev": "^1.1.0",
    "electron-store": "^5.0.0",
    "emotion-theming": "^10",
    "eslint": "^6.5.1",
    "httpdispatcher": "^2.1.2",
    "johnny-five": "^1.3.1",
    "localtunnel": "^2.0.0",
    "lodash": "^4.17.15",
    "qrcode": "^1.4.2",
    "react": "^16.11.0",
    "react-dom": "^16.11.0",
    "react-router-dom": "^5.1.2",
    "react-router-page-transition": "^3.1.0",
    "react-scripts": "3.2.0",
    "typescript": "^3.6.3",
    "ws": "^7.1.2"
  },
  "devDependencies": {
    "@types/concurrently": "^4.1.0",
    "@types/dotenv": "^6.1.1",
    "@types/eslint": "^6.1.3",
    "@types/johnny-five": "^1.3.0",
    "@types/localtunnel": "^1.9.0",
    "@types/lodash": "^4.14.141",
    "@types/qrcode": "^1.3.4",
    "@types/react-router-dom": "^5.1.0",
    "@types/wait-on": "^3.2.0",
    "@types/ws": "^6.0.3",
    "concurrently": "^4.1.2",
    "electron": "^6.0.12",
    "electron-builder": "^21.2.0",
    "electron-rebuild": "^1.8.6",
    "eslint-plugin-react-hooks": "^2.1.2",
    "wait-on": "^3.3.0"
  }
}
